<%= @cocktail.name %>
<ul>
  <% @cocktail.doses.each do |dose| %>
    <li>
      <%= dose.ingredient.name %> | <%= dose.description %>
      <%= link_to 'Delete Dose', dose_path(dose), method: :delete, data: { confirm: 'Are you sure?' }%>
    </li>
  <% end %>
</ul>

<p><%= link_to 'Add Dose', new_cocktail_dose_path(@cocktail) %></p>
<p><%= link_to 'Delete Cocktail', cocktail_path(@cocktail), method: :delete, data: { confirm: 'Are you sure?' }%></p>
<p><%= link_to 'Back to Cocktail Menu', cocktails_path %></p>
